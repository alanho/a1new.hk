<% end %>
  </head>
  <body>
    <%= nav_bar fixed: :top, brand: 'A1News', responsive: true do %>
      <%= menu_group do %>
        <%= drop_down "Archive" do %>
            <% Cover::NEWS_NAMES.each do |k,name| %>
              <%= menu_item name, "/covers/#{k}" %>
            <% end %>
        <% end %>
      <% end %>
    <% end %>

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <%= yield %>
        </div>
      </div>
      <footer class="footer">
        <div class="container">
          <p class="text-muted">a1news.hk</p>
        </div>
      </footer>
    </div> <!-- /container -->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  </body>
</html>
